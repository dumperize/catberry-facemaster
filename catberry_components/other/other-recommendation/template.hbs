<div block="recommendation-list">
    {{#each data}}
        <div block="recommendation">
            <div elem="inner">
                <div elem="img-wr">
                    <img src="{{imgSrc photo 225 225}}" alt="{{title}}" elem="img">
                </div>
                <div elem="content">
                    <p elem="title">{{title}}</p>

                    <div elem="intro">{{{stripStyle text}}}</div>

                    <p elem="date" style="color: red">ERROR{{date}}</p>
                </div>
            </div>
        </div>
    {{/each}}
</div>