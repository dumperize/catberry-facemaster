<h1 block="h1" mod="style">Каталог скидок и подарков</h1>
<div block="sale-catalog">
    {{#each this}}
        {{#if parent.active}}
            <div elem="item">
                <p elem="title" style="background-color: {{parent.color}}">
                    {{parent.name}}
                    <span>{{parent.saleCount}}</span>
                </p>

                <div elem="shares">
                    {{#each sale}}
                        <div elem="sale-item">
                            <div block="sale" mod="catalog">
                                <a href="" elem="link">
                                    <p elem="title">
                                        {{#is type "==" 1}}
                                            Подарок
                                        {{/is}}
                                        {{#is type "==" 2}}
                                            Скидка {{discount}}%
                                        {{/is}}
                                        {{#is type "==" 3}}
                                            -{{discount}} руб.
                                        {{/is}}
                                    </p>

                                    <div elem="pic"><img src="{{imgSrc imgID 210 210}}" elem="img" alt="{{title}}">
                                    </div>

                                    <p elem="text">{{title}}</p>
                                </a>

                                <div elem="popup-content">
                                    <div block="master-micro-inf">
                                        <p elem="title">Акцию предлагает:</p>
                                        <a href="/{{page.number}}" elem="cont"><span><img
                                                src="{{imgSrc owner.imgID 50 50}}"></span><span>{{owner.name}}</span></a>
                                    </div>

                                    <div elem="to-page">
                                        <a block="to-master-page" href="/{{page.number}}">На страницу
                                            мастера<i>{{icon "strelka"}}</i></a>
                                    </div>

                                    <!-- ERROR -->
                                    <div style="width: 180px;">
                                        <br>

                                        <p style="color: red; font-weight: bold;">------ ERROR! ------</p>
                                        page.number store - недостаточно данных
                                        <br><br>
                                    </div>
                                    <!-- ERROR -->
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>

                <div elem="subhead">
                    {{#if root}}
                        {{#if parent.active}}
                            <ul elem="list">
                                {{#each podrubriks}}
                                    {{#if root}}
                                        <li elem="root" class="{{#if parent.active}}act{{/if}}">
                                            {{icon "strelka"}}
                                            <a href="/sale/catalog/{{parent.id}}">{{parent.name}}
                                                <span>{{parent.saleCount}}</span></a>
                                            {{#if parent.active}}
                                                <ul>
                                                    {{#each podrubriks}}
                                                        <li elem="child" class="{{#if active}}act{{/if}}">
                                                            {{icon "strelka"}}
                                                            <a href="/sale/catalog/{{id}}">{{name}}
                                                                <span>{{saleCount}}</span></a>
                                                        </li>
                                                    {{/each}}
                                                </ul>
                                            {{/if}}
                                        </li>

                                    {{else}}
                                        <li elem="child" class="{{#if active}}act{{/if}}">
                                            {{icon "strelka"}}
                                            <a href="/sale/catalog/{{id}}">{{name}}
                                                <span>{{saleCount}}</span></a>
                                        </li>
                                    {{/if}}
                                {{/each}}
                            </ul>
                        {{/if}}
                    {{/if}}
                </div>
            </div>
            <cat-common-paginator id="common-paginator{{parent.id}}" cat-store="Paginator"
                                  model="sale/SaleByRubrika"></cat-common-paginator>
        {{/if}}
    {{/each}}
</div><!-- sale-catalog -->