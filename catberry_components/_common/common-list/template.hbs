<div block="common-list">
    <div class="row">
        {{#is type "==" "video"}}
            {{#each list}}
                <div elem="item">
                    <cat-block-video id="block-video-{{id}}" cat-store="{{../model}}"
                                     id-block="{{id}}" index="{{@index}}"></cat-block-video>
                </div>
            {{/each}}
        {{/is}}

        {{#is type "==" "sale"}}
            {{#each list}}
                <div elem="item">
                    <cat-block-sale id="block-sale-{{id}}" cat-store="{{../model}}" id-block="{{id}}"
                                    index="{{@index}}"></cat-block-sale>
                </div>
            {{/each}}
        {{/is}}

        {{#is type "==" "article"}}
            {{#each list}}
                <div elem="item">
                    <cat-block-article id="block-article-{{id}}" cat-store="{{../model}}"
                                       id-block="{{id}}" index="{{@index}}"
                                       master-number="{{owner.publication.number}}"
                                       master-name="{{owner.name}}"></cat-block-article>
                </div>
            {{/each}}
        {{/is}}

        {{#is type "==" "company"}}
            {{#each list}}
                <div elem="item">
                    <cat-block-company id="block-company-{{id}}" cat-store="{{../model}}"
                                       id-block="{{id}}" index="{{@index}}"></cat-block-company>
                </div>
            {{/each}}
        {{/is}}
    </div>
</div>