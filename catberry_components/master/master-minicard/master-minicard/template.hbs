<div block="master-minicard" class="{{#unless publication.page}}master-minicard_free {{#unless services}}master-minicard_free-new{{/unless}}{{/unless}}">

    <div elem="photo-cont">
        <img elem="photo" src="{{imgSrc imgID 200 200}}" alt="{{name}}">
        {{#if publication.number}}
            <i elem="like">{{icon "like"}} {{likesCount}}</i>
        {{/if}}
    </div>

    <div elem="contact-wrap">
        <cat-master-phone-btn
                id="master-phone-btn-{{id}}"
                phone="{{contacts.phone}}"
                page="{{#if publication.page}}{{publication.number}}{{/if}}"
                owner="{{id}}"></cat-master-phone-btn>

        {{#if publication.page}}
            <a elem="to-page" href="/{{publication.number}}">На страницу мастера<i>{{icon "strelka"}}</i></a>
        {{/if}}
        <a elem="show-services" href="#" mix="block:js-services-toggle">Показать услуги</a>
    </div>

    {{#if company}}
        <p elem="company">
            <span><img elem="logo" src="{{imgSrc company.imgID null 70}}" alt=""></span>
            <span>{{company.name}}</span>
        </p>
    {{/if}}

    <p elem="name">{{name}}</p>

    <p elem="spec">{{#if publication.page}}{{spec}}{{else}}{{rubrika.name}}{{/if}}</p>

    {{#if services}}
        <ul elem="services" mix="block: js-minicard-services-cut"
            class="{{#if isWidget}}master-minicard__services_half{{/if}}">
            {{#each services}}
                <li>{{{this}}}</li>
            {{/each}}
        </ul>
    {{/if}}
    {{#if publication.page}}
        <ul block="master-content-widget">
            <li elem="gift" class="{{#if publication.sales}}{{#if sales.0.title}}act{{/if}}{{/if}}">
                <i>{{icon "gift"}}</i>

                <div>
                    <p elem="info" mod="gift"><span>
                        {{#is sales.0.type "==" 1}}
                            Подарок
                        {{/is}}
                        {{#is sales.0.type "==" 2}}
                            Скидка {{sales.0.discount}}%
                        {{/is}}
                        {{#is sales.0.type "==" 3}}
                            -{{sales.0.discount}} руб.
                        {{/is}}
                    </span></p>

                    <p elem="text">{{sales.0.title}}</p>
                </div>
            </li>
            <li elem="photo" class="{{#if publication.albums}}{{#if albums.0.name}}act{{/if}}{{/if}}">
                <i>{{icon "picture"}}</i>

                <div>
                    <p elem="info">
                        <span>
                            У Мастера:<br>
                            <strong>{{getNumEnding albumsCount "фотоальбом, фотоальбома, фотоальбомов"}}</strong>
                        </span>
                    </p>

                    <p elem="text">{{albumsTitle}}</p>
                </div>
            </li>
            <li elem="video" class="{{#if publication.videos}}{{#if videos.0.title}}act{{/if}}{{/if}}">
                <i>{{icon "video"}}</i>
                {{#if publication.videos}}
                    {{#if videos.0.title}}
                        <div>
                            <div elem="info" mod="cont">
                                <cat-block-video id="block-video-{{id}}"
                                                 cat-store="{{store}}" id-block="{{videos.0.id}}" index="0"
                                                 master-index="{{index}}">
                                </cat-block-video>
                            </div>

                            <p elem="text">{{{videos.0.title}}}</p>
                        </div>
                    {{/if}}
                {{/if}}
            </li>
            <li elem="comment" class="{{#if publication.comments}}{{#if comments.0.text}}act{{/if}}{{/if}}">
                <i>{{icon "dialog"}}</i>

                <div>
                    <p elem="info">
                        <span>
                            У Мастера:<br>
                            <strong>
                                {{getNumEnding vkLikes.countLikes "рекомендация, рекомендации, рекомендаций"}}<br>
                                {{getNumEnding commentsCount "отзыв, отзыва, отзывов"}}
                            </strong>
                        </span>
                    </p>

                    <p elem="text">«{{comments.0.text}}»</p>
                </div>
            </li>
        </ul>
    {{/if}}
</div>


