<div block="search">
    <a href="/search" elem="link">{{icon "search"}} Найти услугу</a>
    <form elem="form" action="/search" method="get">
        {{icon "search"}}
        <label elem="field">
            <input type="text" name="query" elem="input" autofocus value="{{q}}">
        </label>
        <input type="submit" elem="submit" value="Найти услугу">
    </form>
</div>